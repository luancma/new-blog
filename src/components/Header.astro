---
import dotenv from "dotenv";
import { geHomePageMessages, MessageKeys } from "../messages";
const { BLOG_TITLE, BLOG_DESCRIPTION, BLOG_SUB_DESCRIPTION } = MessageKeys;
dotenv.config();
---

<div class="header">
  <h1>{geHomePageMessages(BLOG_TITLE)}</h1>
  <div class="divider"></div>
  <p class="description">
    {geHomePageMessages(BLOG_DESCRIPTION)}
  </p>
  <p class="sub-description">
    {geHomePageMessages(BLOG_SUB_DESCRIPTION)}
  </p>
</div>

<style>
  .description {
    font-size: 1.2rem;
    margin-top: 0.5rem;
    font-weight: 500;
  }

  .sub-description {
    font-size: 1rem;
    margin-top: 0.5rem;
    font-weight: 600;
    font-style: italic;
    padding: 1rem 0;
    border-left: 1px solid var(--secondary-color);
    padding-left: 16px;
  }
</style>
